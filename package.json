{
	"name": "funk-stack-template",
	"private": true,
	"description": "",
	"license": "",
	"sideEffects": false,
	"scripts": {
		"build": "concurrently 'pnpm run build:*' --group",
		"build:remix": "remix build",
		"build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build",
		"build:styles": "pnpm run compile:sass && pnpm run generate:css",
		"dev": "pnpm run build && concurrently 'pnpm run dev:*'",
		"dev:remix": "cross-env NODE_ENV=development remix watch",
		"dev:build": "cross-env NODE_ENV=development pnpm run build:server --watch",
		"dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
		"dev:styles": "concurrently 'pnpm run watch:sass' 'pnpm run watch:css'",
		"watch:css": "cross-env NODE_ENV=development pnpm run transform:css --watch",
		"generate:css": "pnpm run transform:css --env production",
		"transform:css": "postcss styles-compiled/**/*.css --base styles-compiled --dir app/styles",
		"watch:sass": "cross-env NODE_ENV=development pnpm run compile:sass --watch",
		"compile:sass": "sass styles:styles-compiled",
		"docker": "docker-compose up -d",
		"format": "prettier --write .",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"lint:styles": "stylelint 'styles/**/*.sass'",
		"setup": "prisma migrate dev && prisma db seed",
		"start": "cross-env NODE_ENV=production node ./build/server.js",
		"start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
		"test": "vitest",
		"test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
		"pretest:e2e:run": "pnpm run build",
		"test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"cypress run\"",
		"typecheck": "tsc -b && tsc -b cypress",
		"validate": "concurrently 'pnpm run test -- --run' 'pnpm run lint' 'pnpm run typecheck' 'pnpm run test:e2e:run' --group"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build"
	],
	"dependencies": {
		"@prisma/client": "^3.11.1",
		"@remix-run/express": "*",
		"@remix-run/node": "*",
		"@remix-run/react": "*",
		"@remix-run/server-runtime": "*",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"eslint-plugin-cypress": "^2.12.1",
		"express": "^4.17.3",
		"morgan": "^1.10.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"tiny-invariant": "^1.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.17.10",
		"@babel/preset-env": "^7.17.10",
		"@babel/preset-react": "^7.16.7",
		"@faker-js/faker": "^6.1.1",
		"@remix-run/dev": "*",
		"@remix-run/eslint-config": "*",
		"@testing-library/cypress": "^8.0.2",
		"@testing-library/dom": "^8.12.0",
		"@testing-library/jest-dom": "^5.16.3",
		"@testing-library/react": "^12.1.4",
		"@testing-library/user-event": "^14.0.4",
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/eslint": "^8.4.1",
		"@types/express": "^4.17.13",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.23",
		"@types/react": "^17.0.43",
		"@types/react-dom": "^17.0.14",
		"@vitejs/plugin-react": "^1.3.0",
		"autoprefixer": "^10.4.7",
		"c8": "^7.11.0",
		"concurrently": "^7.1.0",
		"cssnano": "^5.1.9",
		"cypress": "^9.5.3",
		"dotenv": "^16.0.0",
		"esbuild": "^0.14.29",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-formatter-pretty": "^4.1.0",
		"eslint-plugin-array-func": "^3.1.7",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-html": "^6.2.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-jsonc": "^2.2.1",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-markdown": "^2.2.1",
		"eslint-plugin-no-constructor-bind": "^2.0.4",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-no-unsanitized": "^4.0.1",
		"eslint-plugin-no-use-extend-native": "^0.5.0",
		"eslint-plugin-optimize-regex": "^1.2.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-security": "^1.5.0",
		"eslint-plugin-sonarjs": "^0.13.0",
		"eslint-plugin-switch-case": "^1.1.2",
		"eslint-plugin-testing-library": "^5.1.0",
		"eslint-plugin-unicorn": "^41.0.1",
		"happy-dom": "^2.55.0",
		"lint-staged": "^12.4.1",
		"msw": "^0.39.2",
		"postcss": "^8.4.13",
		"postcss-cli": "^9.1.0",
		"postcss-sass": "^0.5.0",
		"prettier": "^2.6.1",
		"prettier-plugin-tailwindcss": "^0.1.8",
		"prisma": "^3.11.1",
		"sass": "^1.51.0",
		"start-server-and-test": "^1.14.0",
		"stylelint": "^14.8.2",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-standard-scss": "^3.0.0",
		"tailwindcss": "^3.0.23",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.14.1",
		"typescript": "^4.6.3",
		"vite": "^2.9.1",
		"vite-tsconfig-paths": "^3.4.1",
		"vitest": "^0.8.2"
	},
	"engines": {
		"node": ">=14"
	},
	"prisma": {
		"seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
	},
	"lint-staged": {
		"*.ts": [
			"pnpm run lint",
			"pnpm run test --findRelatedTests"
		],
		"*.sass": [
			"pnpm run lint:styles"
		]
	}
}
